<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_review_detail"
    android:backgroundTint="@color/white"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/photo_user"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_photo_user_review"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:src="@drawable/medium_image_director"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothampro_medium"
            android:letterSpacing="0.03"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/color_main"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo_user"
            tools:text="Пухов Александр Сергеевич" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/company_user"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gothampro"
            android:lineHeight="15dp"
            android:textAlignment="center"
            android:textColor="@color/color_main"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_user"
            tools:text="Учредитель и руководитель ООО «АЙТИ КРОН»" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/gothampro"
            android:letterSpacing="0.01"
            android:lineHeight="19dp"
            android:maxLines="5"
            android:paddingHorizontal="16dp"
            android:textColor="@color/color_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/company_user"
            tools:text="«У меня уже был опыт управления другой компанией. В этой компании было несколько партнеров и несмотря на то, что общее движение было" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_watch_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothampro_medium"
            android:paddingBottom="20dp"
            android:text="@string/text_watch_more"
            android:textColor="@color/color_main_second"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_review" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>